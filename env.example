# Gobi BI Platform Environment Variables
# Copy this file to .env and update the values

# Environment
GO_ENV=dev

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION_HOURS=168
JWT_REFRESH_EXPIRATION_HOURS=720

# Database Configuration
DB_TYPE=sqlite
DB_DSN=gobi.db

# For MySQL
# DB_TYPE=mysql
# DB_DSN=user:password@tcp(localhost:3306)/gobi?charset=utf8mb4&parseTime=True&loc=Local

# For PostgreSQL
# DB_TYPE=postgres
# DB_DSN=host=localhost user=postgres password=pass dbname=gobi port=5432 sslmode=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# Security
BCRYPT_COST=10
RATE_LIMIT=1000-M
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_OUTPUT=stdout

# Cache
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Webhook
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5

# Data Source Encryption
DATA_SOURCE_SECRET=your_32_character_encryption_key_here

# External Services (Optional)
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@gobi.com

# Redis Configuration (Optional, for distributed caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# File Storage (Optional)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
STORAGE_MAX_SIZE=10485760  # 10MB

# For S3 Storage
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=gobi-uploads 